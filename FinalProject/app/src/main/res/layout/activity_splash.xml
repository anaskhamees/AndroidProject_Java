<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Title TextView at the top -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Food Planner"
        android:textColor="#009688"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.1"
        android:shadowColor="#4D000000"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:padding="8dp"
        android:layout_alignParentTop="true" />

    <!-- Lottie Animation View in the middle -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation" /> <!-- Replace with your animation file -->

    <!-- Your Name TextView at the bottom -->
    <TextView
        android:id="@+id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Anas Khamees"
        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.1"
        android:shadowColor="#4D000000"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:padding="8dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
